                , warp
                , warp-tls
                , wreq
                , yaml
                , yesod
                , yesod-auth
                , yesod-core
                , yesod-form
                , yesod-static
                , yesod-persistent
                , data-default
                , universum
                , hjsmin
                , mono-traversable
                , financial-news-scraper
                , conduit
                , conduit-combinators
  if flag(library-only)
    buildable: False
  other-modules:
      DevelMain
      Migration
      Paths_investments_info
  default-language: Haskell2010

